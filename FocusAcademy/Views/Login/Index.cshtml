@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<div class="login">
    <h1><strong>Login</strong></h1>
    <form id="loginForm" asp-controller="Login" asp-action="Entrar" method="post">
        <label for="email">Email:</label>
        <input type="email" asp-for="Email" id="email" name="email" required><br>

        <label for="senha">Senha:</label>
        <input type="password" asp-for="Senha" id="senha" name="senha" required><br>

        <button type="submit">Entrar</button>

        @if (TempData["MensagemErro"] != null){
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
        }
    </form>
</div>
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f6f9;
    }

    .login {
        max-width: 600px;
        margin: auto;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

    .login:hover {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    h1 {
        font-size: 1.8em;
        color: #49052a;
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px;
        color: #49052a;
        text-align: left;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
    }

    input:focus {
        border-color: #80bdff;
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    button {
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 8px;
        background-color: #49052a;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
    }

    button:hover {
        background-color: #270518;
    }

    .alert {
        max-width: 600px;
        margin: 20px auto;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>
