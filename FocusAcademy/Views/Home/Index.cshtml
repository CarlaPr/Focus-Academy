@model HomeModel //comando para a view ter contato com a model. Lendo o conteudo dela

@{
    ViewData["Title"] = "Página Inicial";
}
<style>

    .gallery-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .gallery-item {
        text-align: center;
        margin: 10px;
        width: 150px;
    }

    .gallery-item img {
        width: 100%;
        height: auto;
    }

    .description {
        margin-top: 5px;
        font-size: 14px;
    }

    #fotoinicial {
    width: 100%;          /* Faz o contêiner ocupar 100% da largura da tela */
    height: 100vh;        /* Ajusta a altura para ocupar 100% da altura da tela */
    display: flex;        /* Flexbox para centralizar a imagem */
    justify-content: center;  /* Centraliza a imagem horizontalmente */
    align-items: center;  /* Centraliza a imagem verticalmente */
    overflow: hidden;     /* Esconde o excesso caso a imagem seja maior */
}

#fotoinicial img {
    width: 100%;          /* Faz a imagem ocupar 100% da largura do contêiner */
    height: auto;         /* Mantém a proporção original da imagem */
    object-fit: cover;    /* Cobre todo o contêiner, mantendo a proporção */
}
</style>

<!-- Carrosel de fotos -->

<div id="fotoinicial">
    <img src="@Url.Content("~/Images/A.svg")">
</div>



