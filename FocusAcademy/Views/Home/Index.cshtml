@model HomeModel //comando para a view ter contato com a model. Lendo o conteudo dela

@{
    ViewData["Title"] = "Página Inicial";
}
<style>

    .professores {
        background-color: #49052a;
        margin-top: 0px;
    }

    .professores h2{
        font-size: 2.5rem;
        font-weight: bold;
        text-align: center;
        color: white;
    }

    .gallery-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .gallery-item {
        text-align: center;
        margin: 10px;
        width: 150px;
    }

    .gallery-item img {
        width: 100%;
        height: auto;
        border-radius: 50%;
    }

    .description {
        margin-top: 5px;
        font-size: 14px;
        color: white;
    }

    #fotoinicial{        
        margin: 0px;
        padding: 0px;
    }

    #fotoinicial img {
        width: 100%;          /* Faz a imagem ocupar 100% da largura do contêiner */
        height: auto;         /* Mantém a proporção original da imagem */
        object-fit: cover;    /* Cobre todo o contêiner, mantendo a proporção */
    }

    .indicacao{
        background-color: #49052a;
        margin: 0px;
        padding: 20px;
    }

    .indicacao h1{
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
        text-align: center;
    }

    .indicacao p{ 
        padding: 10px;
        color: white;
        font-size: 1rem;
        text-align: justify;
    }

    hr {
        border: none;
        height: 1px;
        background-color: white;
    }

    .cursos{
        padding: 25px;
    }
    
</style>

<div id="fotoinicial">
    <img src="@Url.Content("~/Images/Focus_banner_index.svg")">
</div>

<!-- Indicação -->
<div class="indicacao">
    <h1>Focus Academy, seu futuro começa aqui!</h1>
    <p>Na Focus Academy, nossa missão é transformar o aprendizado em uma experiência 
         e eficaz. Somos uma instituição especializada em cursos preparatórios para o ENEM e 
         reforço escolar, dedicada a ajudar estudantes a alcançar seus objetivos acadêmicos e
          realizar seus sonhos.
    </p>
    <p>A Focus Academy é uma escola preparatória para o ENEM e outros vestibulares, que também oferece
         reforço escolar, valorizando a qualidade do ensino e o atendimento personalizado. A escola
          adota uma metodologia que privilegia a proximidade entre professor e aluno, com turmas
           reduzidas e horários flexíveis, de segunda a sexta-feira e aos sábados. Este ambiente focado
            e acolhedor garante que cada aluno receba a atenção necessária para alcançar o melhor
             desempenho, seja nos vestibulares ou nas atividades de reforço escolar.
    </p>
    <hr>
</div>

<div class="professores">
    <h2>Conheça nossos professores!</h2>
<!-- Fotos dos professores -->
        <div class="gallery-container">
            <div class="gallery-item">
                <img src="@Url.Content("~/Images/1.svg")" alt="Profº Jorge Simião">
                <div class="description">Profº Jorge Simião</div>
            </div>
            <div class="gallery-item">
                <img src="@Url.Content("~/Images/2.svg")" alt="Profº Alberto Vicente">
                <div class="description">Profº Alberto Vicente</div>
            </div>
            <div class="gallery-item">
                <img src="@Url.Content("~/Images/3.svg")" alt="Profª Juliana Nobrega">
                <div class="description">Profª Juliana Nobrega</div>
            </div>
            <div class="gallery-item">
                <img src="@Url.Content("~/Images/4.svg")" alt="Profº Thalles Gusman">
                <div class="description">Profº Thalles Gusman</div>
            </div>
            <div class="gallery-item">
                <img src="@Url.Content("~/Images/5.svg")" alt="Profº Francisco Celestino">
                <div class="description">Profº Francisco Celestino</div>
            </div>
        </div>
</div>

<!-- Seção de Cursos -->
<div class="cursos">
    <div class="container mt-5">
        <h1 class="mb-4">Confira nossos cursos!</h1>
        <div class="d-flex flex-wrap justify-content-around">
            <!-- curso reforço 1 -->
            <div class="card mb-4" style="width: 18rem;">
                <img class="card-img-top" src="caminho/para/sua/imagem1.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Título do Curso 1</h5>
                    <p class="card-text">Descrição do conteúdo do curso 1.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Aula de Português</li>
                    <li class="list-group-item">Aula de Matemática</li>
                    <li class="list-group-item">Aula de Ciências</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Matricule-se</a>
                </div>
            </div>

            <!-- curso reforço 2 -->
            <div class="card mb-4" style="width: 18rem;">
                <img class="card-img-top" src="caminho/para/sua/imagem2.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Título do Curso 2</h5>
                    <p class="card-text">Descrição do conteúdo do curso 2.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Aula de História</li>
                    <li class="list-group-item">Aula de Geografia</li>
                    <li class="list-group-item">Aula de Inglês</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Matricule-se</a>
                </div>
            </div>

            <!-- curso reforço 3 -->
            <div class="card mb-4" style="width: 18rem;">
                <img class="card-img-top" src="caminho/para/sua/imagem3.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Título do Curso 3</h5>
                    <p class="card-text">Descrição do conteúdo do curso 3.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Aula de Física</li>
                    <li class="list-group-item">Aula de Química</li>
                    <li class="list-group-item">Aula de Biologia</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Matricule-se</a>
                </div>
            </div>
        </div>
    </div>
</div>