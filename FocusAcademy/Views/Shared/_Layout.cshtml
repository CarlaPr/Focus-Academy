<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FocusAcademy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FocusAcademy.styles.css" asp-append-version="true" />

    <style>
        .custom-button {
        background-color: #49052a; /* Cor de fundo personalizada */
        color: white; /* Cor do texto do botão */
        border: none; /* Remove a borda padrão */
        }

        .custom-button:hover {
        background-color: #6a0f4e; /* Cor de fundo ao passar o mouse */
        color: white; /* Garante que o texto permaneça branco ao passar o mouse */
        }

        .custom-button:focus, .custom-button:active {
        box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.1); /* Mantém a sombra ao focar e clicar */
        }
    </style>
</head>
<body>
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-secondary">Home</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-dark">Features</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-dark">Pricing</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-dark">FAQs</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-dark">About</a></li>
      </ul>

      <div class="col-md-3 text-end">
        <button type="button" class="btn custom-button">Login</button>
        <button type="button" class="btn custom-button">Sign-up</button>
      </div>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FocusAcademy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
