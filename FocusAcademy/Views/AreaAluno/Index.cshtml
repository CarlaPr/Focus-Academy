@model FocusAcademy.Models.UsuarioModel

@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Área do Aluno";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f6f9;
    }

    .area-aluno-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease;
        border: 1px solid #ddd;
    }

    .area-aluno-container:hover {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .welcome-message {
        text-align: center;
        font-size: 2.5em;
        color: #49052a;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .subtitle {
        font-size: 1.5em;
        color: #34495e;
        text-align: center;
        margin-bottom: 20px;
    }

    .course-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .course-list li {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
        font-size: 1.2em;
        background-color: #ecf0f1;
        border-radius: 8px;
        margin-bottom: 15px;
        border: 1px solid #bdc3c7;
        transition: background-color 0.3s, transform 0.2s;
        color: #34495e;
    }

    .course-list li:hover {
        background-color: #bdc3c7;
        transform: translateY(-2px);
    }

    .course-list li a {
        text-decoration: none;
        color: #2c3e50;
        font-weight: bold;
        padding: 10px;
    }

    .course-list li a:hover {
        text-decoration: underline;
        color: #3498db;
    }

    .course-list li .course-name {
        flex-grow: 1;
        font-weight: bold;
        color: #2c3e50;
    }

    .course-list li .action-links {
        display: flex;
        gap: 10px;
    }

    .course-list li .action-links a {
        color: #3498db;
        font-size: 1em;
        text-decoration: none;
    }

    .course-list li .action-links a:hover {
        text-decoration: underline;
    }

    p {
        font-size: 1.2em;
        color: #34495e;
        text-align: center;
        margin-top: 20px;
    }

    a {
        color: #3498db;
        font-weight: bold;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
    }
</style>
<div class="area-aluno-container">
    <h1 class="welcome-message">Bem-vindo!</h1>

    @if (Model?.Matriculas != null && Model.Matriculas.Any())
    {
        <ul class="course-list">
            @foreach (var matricula in Model.Matriculas)
            {
                <li>
                    <span class="course-name">Cursos Matriculado: @(matricula?.Curso?.Nome ?? "Curso não disponível")</span>
                </li>
                <li>
                    <div class="action-links">
                        <a asp-controller="AreaAluno" asp-action="Grade">Visualizar Grade Horária</a>
                        <a asp-controller="AreaAluno" asp-action="Visualizar">Visualizar Dados Cadastrais</a>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Você ainda não está matriculado em nenhum curso.</p>
        <ul>
            <li>
                <a asp-controller="AreaAluno" asp-action="Matricular">Veja os Cursos Disponíveis e se Matricule já!</a>
            </li>
        </ul>
    }
</div>
