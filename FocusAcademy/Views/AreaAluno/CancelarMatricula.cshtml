@model MatriculaModel

@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Cancelar Matrícula";
}

<div class="area-aluno-container">
    <h2 class="subtitle">Cancelar Matrícula</h2>

    <p>Tem certeza de que deseja cancelar a matrícula no curso <strong>@Model.Curso.Nome</strong>?</p>

    <form asp-action="ConfirmarCancelamento" method="post">
        <input type="hidden" name="MatriculaId" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Cancelar Matrícula</button>
        <a asp-controller="AreaAluno" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
