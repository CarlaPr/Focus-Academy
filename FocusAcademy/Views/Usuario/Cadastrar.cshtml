@using FocusAcademy.Enums
@model UsuarioModel //comando para a view ter contato com a model. Lendo o conteudo dela
@{
    ViewData["Title"] = "Cadastro";
}
@if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger">@TempData["Erro"]</div>
    }
<style>
    .cadastro {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #f4f4f4;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 100px ;
    }

    h1 {
        color: #49052a; 
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        color: #49052a; 
        text-align: left;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="date"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button, #login{
        background-color: #49052a; 
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover{
        background-color: #270518; 
    }
</style>

<script>
        function formatarCPF(input) {
            // Remove tudo que não é número
            let valor = input.value.replace(/\D/g, '');
            // Adiciona a formatação
            if (valor.length <= 11) {
                valor = valor.replace(/(\d{3})(\d)/, '$1.$2'); // Adiciona ponto após 3 dígitos
                valor = valor.replace(/(\d{3})(\d)/, '$1.$2'); // Adiciona ponto após 3 dígitos
                valor = valor.replace(/(\d{3})(\d{1,2})$/, '$1-$2'); // Adiciona traço
            }
            input.value = valor;
        }
</script>

<div class="cadastro">
    <h1>Cadastro</h1>
    <form id="cadastroForm" asp-controller="Usuario" asp-action="Cadastrar" method="post">
        <input type="hidden" asp-for="Perfil" value="2">

        <label asp-for="Nome">Nome:</label>
        <input type="text" asp-for="Nome" required><br>

        <label asp-for="Cpf">CPF:</label>
        <input type="text" asp-for="Cpf" oninput="formatarCPF(this)" required><br>

        <label asp-for="DataNascimento">Data de Nascimento:</label>
        <input type="date" asp-for="DataNascimento" required><br>

        <label asp-for="Endereco">Endereço:</label>
        <input type="text" asp-for="Endereco" required><br>

        <label asp-for="Telefone">Telefone:</label>
        <input type="text" asp-for="Telefone" required><br>

        <label asp-for="Email">Email:</label>
        <input type="email" asp-for="Email" required><br>

        <label asp-for="Senha">Senha:</label>
        <input type="password" asp-for="Senha" required><br><br>

        <button type="submit">Cadastrar</button>
    </form>

</div>