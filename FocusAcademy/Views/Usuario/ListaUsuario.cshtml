@model List<UsuarioModel>

@{
    ViewData["Title"] = "Lista Usuarios";
}

<div class="text-center">
    <h1 class="display-4">Lista Usuarios</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">CPF</th>
      <th scope="col">Endereço</th>
      <th scope="col">Telefone</th>
      <th scope="col">Perfil</th>
    </tr>
  </thead>
  <tbody>

    @if (Model != null && Model.Any())
    {
      foreach(var usuario in Model)
      {
        <tr>
            <th scope="row">@usuario.Id</th>
            <td>@usuario.Nome</td>
            <td>@usuario.Email</td>
            <td>@usuario.Cpf</td>
            <td>@usuario.Endereco</td>
            <td>@usuario.Telefone</td>
            <td>@usuario.Perfil</td>
          </tr>
          <div class="btn-group" role="group">
              <a role="button" asp-action="Editar" asp-controller="Usuario" asp-route-id="@usuario.Id" class="btn btn-primaty">Editar</a>
              <a role="button" asp-action="ApagarConfirmacao" asp-controller="Usuario" asp-route-id="@usuario.Id" class="btn btn-danger">Apagar</a>
          </div>
      }
    } else {
      <tr class="odd"><td valign="top" colspan="5">Nenhum Registro Encontrado</td></tr>
    }
  </tbody>
</table>